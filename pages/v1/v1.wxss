/* pages/v1/v1.wxss */
.box {
    width: 750rpx;
    height: 450rpx;
    position: relative;
    background: #FFF5EE;
    margin: 0 auto;
  }
  
.boxrank {
    width: 144rpx;
    height: 90rpx;
    background: #FF6A6A;
    /* text-align: center; */
    position: absolute;
    box-sizing: border-box;
    border: 1px solid #fff;
}

.luckyshow {
    opacity: 0.5;
    background: #FF6A6A;
}

.boxcontent{
    text-align: center;
    display: block;
    color: #fff;
    line-height: 90rpx;
}

.lucky {
    width: 424rpx;
    height: 270rpx;
    position: absolute;
    top: 90rpx;
    left: 172rpx;
    color: #fff;
    margin: auto;
}

.lucky:active {
    opacity: 0.7;
}

.clicklucky {
    text-align: center;
    display: block;
    margin: 60rpx auto;
    width: 300rpx;
    line-height: 160rpx;
    height: 160rpx;
    background: #FF6A6A;
}